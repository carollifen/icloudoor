<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f7" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/login_logo" />
    
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp" >

        <EditText
            android:id="@+id/regi_input_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_confirm"
            android:hint="输入11位手机号码"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#8b9eb6"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_regi_get_certi_code"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_certi"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>
    
    <EditText
        android:id="@+id/regi_input_certi_code"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:hint="输入验证码"
        android:padding="10dp"
        android:textColorHint="#8b9eb6"
        android:textSize="17sp"
        android:background="@drawable/shape_confirm"
        android:inputType="number" />

    <TextView
        android:id="@+id/btn_regi_next_step"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp"
        android:background="@drawable/selector_blue_nextstep_confirm"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#cccccc"
        android:textSize="17sp" />

</RelativeLayout>